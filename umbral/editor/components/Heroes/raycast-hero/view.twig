{# Raycast Hero Component Template #}
{# Styles and scripts are now auto-enqueued by render.php #}

{# Raycast Hero Component HTML #}
<section id="{{ component_id }}" class="umbral-raycast-hero">
    
    {# Background with floating elements #}
    <div class="hero-background">
        <div class="floating-elements">
            <div class="floating-element floating-1"></div>
            <div class="floating-element floating-2"></div>
            <div class="floating-element floating-3"></div>
            <div class="floating-element floating-4"></div>
        </div>
        <div class="gradient-mesh"></div>
    </div>
    
    <div class="hero-container blocksy-container">
        
        {# Feature cards - left side #}
        <div class="feature-cards-left">
            {% set left_cards = feature_cards|slice(0, 2) %}
            {% for card in left_cards %}
            <div class="feature-card card-animate-left">
                <div class="card-icon">{{ card.icon }}</div>
                <div class="card-content">
                    <h4 class="card-title">{{ card.title }}</h4>
                    <p class="card-description">{{ card.description }}</p>
                </div>
            </div>
            {% endfor %}
        </div>
        
        {# Main hero content #}
        <div class="hero-main">
            
            {# Hero text #}
            <div class="hero-text">
                <h1 class="hero-title">{{ title }}</h1>
                {% if subtitle %}
                <p class="hero-subtitle">{{ subtitle }}</p>
                {% endif %}
            </div>
            
            {# Command palette interface #}
            <div class="command-palette">
                <div class="search-container">
                    <div class="search-icon">
                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                            <path d="M9 17A8 8 0 1 0 9 1a8 8 0 0 0 0 16zM20 20l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <input type="text" class="search-input" placeholder="{{ search_placeholder }}" readonly>
                    <div class="search-shortcut">âŒ˜K</div>
                </div>
                
                {# Search shortcuts #}
                {% if shortcuts %}
                <div class="shortcuts-container">
                    {% for shortcut in shortcuts %}
                    <div class="shortcut-item">
                        <span class="shortcut-icon">{{ shortcut.icon }}</span>
                        <span class="shortcut-text">{{ shortcut.text }}</span>
                        <span class="shortcut-key">{{ shortcut.keystroke }}</span>
                    </div>
                    {% endfor %}
                </div>
                {% endif %}
            </div>
            
            {# CTA Button #}
            {% if cta_text %}
            <div class="hero-cta">
                <a href="{{ cta_url }}" class="cta-button blocksy-button">
                    {{ cta_text }}
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="none" class="cta-arrow">
                        <path d="M3.33334 8H12.6667M12.6667 8L8.00001 3.33333M12.6667 8L8.00001 12.6667" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </a>
            </div>
            {% endif %}
            
        </div>
        
        {# Feature cards - right side #}
        <div class="feature-cards-right">
            {% set right_cards = feature_cards|slice(2, 2) %}
            {% for card in right_cards %}
            <div class="feature-card card-animate-right">
                <div class="card-icon">{{ card.icon }}</div>
                <div class="card-content">
                    <h4 class="card-title">{{ card.title }}</h4>
                    <p class="card-description">{{ card.description }}</p>
                </div>
            </div>
            {% endfor %}
        </div>
        
    </div>
    
</section>

{# Component JavaScript is now auto-enqueued by render.php #}